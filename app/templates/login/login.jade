ion-view(
  view-title="{{ 'login' | translate }}",
  hide-nav-bar="true",
  class="login-view"
)
  ion-content(scroll="false")
    .row.responsive-md.row-center
      .col-offset-10
      form(ng-submit='vm.login()').col-center.col-50.col-offset-25
        .list.list-inset
          label.item.item-input
            input(
              type='email',
              ng-model='vm.loginForm.email',
              required='required',
              placeholder="{{ 'login.email' | translate }}"
            )
          label.item.item-input
            input(
              type='password',
              ng-model='vm.loginForm.password',
              required='required',
              placeholder="{{ 'login.password' | translate }}"
            )
        .row.responsive-sm.button-actions
          .col
            .button.button-block.button-calm
              | {{ 'signup' | translate }}
          .col
            input(
              type='submit',
              value="{{ 'login' | translate }}"
            ).button.button-block.button-positive
